<html lang="en">
    <%- include("./partials/header.ejs") %>
<body>
    <%- include("./partials/nav.ejs") %>
    <div class="blogs content">
        <h2>All devices</h2>

        <% if(blogs.length > 0) { %>
            <% blogs.forEach(blog => { %>
                <h3 class="title"><%= blog.title %></h3>
                <p class="snippet"><%=blog.snippet %></p>
            <% }) %>    
        <% } else { %>
            <p> No Blogs available</p>
        <% } %>    

    </div>
    <%- include("./partials/footer.ejs") %>
</body>
</html>